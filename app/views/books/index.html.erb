<%= render 'book', user: @user, book_new: @book_new %>


<h4>Books</h4>

<table class="table">

  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opnion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
