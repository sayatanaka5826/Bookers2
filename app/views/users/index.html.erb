<h1>User info</h1>

<% if @user.profile_image.attached? %>
  <%= image_tag @user.profile_image %>
<% else %>
  <%= image_tag 'no_image', size: "100x100" %>
<% end %>
<p>name</p>
<%= @user.name %>
<p>introduction</p>
<%= @user.introduction %>


<h1>New book</h1>

<%= form_with model: @book do |f| %>
<p>Title<p>
<%= f.text_field :title %>

<p>Opinion<p>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>

<h4>Users</h4>
<% @users.each do |user| %>

<p>Image</p>
  <%= image_tag  user.get_profile_image(100, 100) %>
<p>Name</p>
  <%= user.name %>


<% end %>

